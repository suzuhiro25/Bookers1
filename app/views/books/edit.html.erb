<h1>Editing Book</h1>
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
    <%= form_for(@book) do |f| %>
		<% if @book.errors.any? %>
		    <ul>
		      <% @book.errors.full_messages.each do |message| %>
		        <li><%= message %></li>
		      <% end %>
		<% end %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Update Book' %>
    <% end %>
    <%= link_to "Show", book_path(@book) %>
    <%= link_to "Back", books_path(@book) %>